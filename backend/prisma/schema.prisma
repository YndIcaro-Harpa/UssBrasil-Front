// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER")
  phone         String?
  cpf           String?   @unique
  address       String?
  city          String?
  state         String?
  zipCode       String?
  country       String?   @default("Brasil")
  birthDate     DateTime?
  gender        String?
  preferences   String?   // User preferences as JSON string
  permissions   String?   // JSON string for granular permissions e.g. ["edit_price", "view_reports"]
  isActive      Boolean   @default(true)
  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  orders   Order[]
  reviews  Review[]
  cartItems CartItem[]
  wishlist Wishlist[]
  addresses Address[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Brand {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  logo        String?  // Cloudinary URL
  color       String?  // Brand primary color
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]
  categories Category[]
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  image       String?   // Cloudinary URL
  icon        String?   // Icon name
  slug        String    @unique
  color       String?   // Category color
  seoTitle    String?
  seoDescription String?
  sortOrder   Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relacionamentos
  brandId     String?
  brand       Brand?    @relation(fields: [brandId], references: [id])
  products    Product[]
}

model Product {
  id            String        @id @default(cuid())
  name          String
  description   String
  slug          String        @unique
  sku           String?       @unique // SKU do produto
  
  // Campos de Precificação Completos
  costPrice         Float?    // Preço de custo/compra do fornecedor
  suggestedPrice    Float?    // Preço sugerido pelo fornecedor/mercado
  originalPrice     Float?    // Preço original "de" (riscado)
  price             Float     // Preço base de venda
  discountPercent   Float?    // Percentual de desconto (ex: 10 = 10%)
  discountPrice     Float?    // Preço com desconto calculado
  stripeDiscount    Float?    // Desconto adicional para pagamento via Stripe (%)
  stripeFinalPrice  Float?    // Preço final com desconto Stripe
  finalPrice        Float?    // PREÇO FINAL exibido ao cliente (sem parcelamento)
  markup            Float?    // Markup em porcentagem
  profitMargin      Float?    // Margem de lucro em porcentagem
  profitValue       Float?    // Valor do lucro em reais
  
  stock         Int
  status        String        @default("ACTIVE")
  isActive      Boolean       @default(true) // Controle de ativação
  featured      Boolean       @default(false)
  isFeatured    Boolean       @default(false) // Destaque especial
  isPreOrder    Boolean       @default(false) // Produto sob encomenda
  images        String        // Comma-separated URLs
  categoryId    String?
  brandId       String?
  rating        Float?        @default(0)
  totalReviews  Int          @default(0)
  specifications String?      // JSON string
  seoTitle      String?
  seoDescription String?
  weight        Float?
  dimensions    String?       // JSON string for dimensions
  warranty      Int?         @default(12) // months
  tags          String?      // Comma-separated tags
  colors        String?      // JSON array of colors
  sizes         String?      // JSON array of sizes
  storage       String?      // JSON array of storage options
  ncm           String?      // Código NCM do produto
  supplierId    String?      // ID do fornecedor
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  category    Category?    @relation(fields: [categoryId], references: [id])
  brand       Brand?       @relation(fields: [brandId], references: [id])
  supplier    Supplier?    @relation(fields: [supplierId], references: [id])
  variations  ProductVariation[]
  orderItems  OrderItem[]
  reviews     Review[]
  cartItems   CartItem[]
  wishlist    Wishlist[]
}

// Model de Variação de Produto
model ProductVariation {
  id            String   @id @default(cuid())
  productId     String   // Produto pai
  name          String   // Nome da variação (ex: "iPhone 15 Pro - 256GB Preto")
  sku           String   @unique // SKU único da variação
  ncm           String?  // NCM da variação
  
  // Atributos da variação
  colorName     String?  // Nome da cor
  colorCode     String?  // Código hex da cor
  colorImage    String?  // Imagem específica da cor (DEPRECATED - use colorImages)
  colorImages   String?  // JSON array de imagens da cor (Cloudinary URLs)
  storage       String?  // Armazenamento (ex: "256GB")
  size          String?  // Tamanho (ex: "6.7 polegadas")
  
  // Preços
  costPrice     Float?   // Preço de custo
  price         Float    // Preço de venda
  discountPrice Float?   // Preço com desconto
  
  // Estoque
  stock         Int      @default(0)
  
  // Status
  status        String   @default("ACTIVE") // ACTIVE, INACTIVE, OUT_OF_STOCK
  isActive      Boolean  @default(true)
  condition     String?  @default("new") // new, semi_new, used
  
  // Imagem principal da variação
  image         String?
  
  // Fornecedor
  supplierId    String?
  supplierName  String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relacionamentos
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  supplier      Supplier? @relation(fields: [supplierId], references: [id])
}

// Model de Fornecedor
model Supplier {
  id        String   @id @default(cuid())
  name      String
  cnpj      String?  @unique
  email     String?
  phone     String?
  address   String?
  city      String?
  state     String?
  zipCode   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  products   Product[]
  variations ProductVariation[]
}

model CartItem {
  id        String @id @default(cuid())
  userId    String
  productId String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model Order {
  id                    String      @id @default(cuid())
  userId                String?
  status                String      @default("PENDING")
  paymentStatus         String      @default("PENDING")
  paymentMethod         String
  saleType              String      @default("online") // online ou presencial
  subtotal              Float
  shipping              Float
  discount              Float       @default(0)
  total                 Float
  shippingAddress       String      // JSON string
  trackingCode          String?
  notes                 String?
  couponId              String?
  stripePaymentIntentId String?     // Stripe Payment Intent ID
  stripeCustomerId      String?     // Stripe Customer ID
  installments          Int         @default(1) // Número de parcelas
  estimatedDelivery     DateTime?
  deliveredAt           DateTime?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  user       User?       @relation(fields: [userId], references: [id])
  coupon     Coupon?     @relation(fields: [couponId], references: [id])
  orderItems OrderItem[]
}

model OrderItem {
  id             String   @id @default(cuid())
  orderId        String
  productId      String
  quantity       Int
  price          Float
  subtotal       Float    @default(0) // Subtotal do item (price * quantity)
  selectedColor  String?  // Cor selecionada (nome)
  selectedColorCode String? // Código hex da cor
  selectedStorage String? // Armazenamento selecionado (ex: "256GB")
  selectedSize   String?  // Tamanho selecionado
  variationId    String?  // ID da variação se aplicável
  productName    String?  // Nome do produto no momento da compra
  productSku     String?  // SKU do produto/variação
  productImage   String?  // Imagem do produto
  createdAt      DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  productId String
  rating    Int
  comment   String?
  images    String?  // Comma-separated URLs
  verified  Boolean  @default(false) // Verified purchase
  helpful   Int      @default(0) // Helpful votes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Coupon {
  id          String      @id @default(cuid())
  code        String      @unique
  description String?
  type        String
  value       Float       // Percentage or fixed amount
  minAmount   Float?      // Minimum order amount
  maxAmount   Float?      // Maximum discount amount
  usageLimit  Int?        // Total usage limit
  usageCount  Int         @default(0)
  userLimit   Int?        // Per user limit
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  orders Order[]
}

model Address {
  id           String  @id @default(cuid())
  userId       String
  name         String  // Address name (e.g., "Home", "Work")
  recipientName String
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  zipCode      String
  country      String  @default("Brasil")
  isDefault    Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SiteConfig {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., "home_banner_main", "home_video_hero"
  value       String   // The content (URL, text, JSON)
  type        String   // "image", "video", "text", "json"
  description String?
  updatedAt   DateTime @updatedAt
}

model Analytics {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  pageViews Int      @default(0)
  visitors  Int      @default(0)
  sales     Float    @default(0)
  orders    Int      @default(0)
  data      String?  // JSON string
  createdAt DateTime @default(now())

  @@unique([date])
}

// Enums convertidos para strings no SQLite
